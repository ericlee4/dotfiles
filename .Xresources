! Set better font
xterm*faceName: Source Code Pro,Source Code Pro Semibold
xterm*faceSize: 10
xterm*font: fixed
xterm*boldFont: fixed
xterm*termName: xterm-256color

! Fix alt keys in profanity
xterm*metaSendsEscape: true

! Colored man pages
*VT100.colorBDMode:     true
*VT100.colorBD:         red
*VT100.colorULMode:     true
*VT100.colorUL:         cyan
*VT100.veryBoldColors: 6

! Ctrl-h fix
xterm*ptyInitialErase: true
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?
XTerm.vt100.locale: true

!cursor size
Xcursor.size: 12

! terminal colors ------------------------------------------------------------
! tangoesque scheme
xterm*background: #303030
xterm*foreground: #c5c8c6
! Black (not tango) + DarkGrey
xterm*color0:  #000000
xterm*color8:  #555753
! DarkRed + Red
xterm*color1:  #ff6565
xterm*color9:  #ff8d8d
! DarkGreen + Green
xterm*color2:  #93d44f
xterm*color10: #c8e7a8
! DarkYellow + Yellow
xterm*color3:  #eab93d
xterm*color11: #ffc123
! DarkBlue + Blue
xterm*color4:  #204a87
xterm*color12: #3465a4
! DarkMagenta + Magenta
xterm*color5:  #ce5c00
xterm*color13: #f57900
!DarkCyan + Cyan (both not tango)
xterm*color6:  #89b6e2
xterm*color14: #46a4ff
! LightGrey + White
xterm*color7:  #cccccc
xterm*color15: #ffffff
